<Opcao>

    Menu:
        name:'menu'
    Inicial:
        name:'inicial'

<Menu>
    
    FloatLayout:
        MDLabel:
            text: "Café Cereja"
            halign: "center"
            theme_text_color: "Secondary"
            pos_hint: {"center_x": .5, "center_y": .7}
            
        MDFillRoundFlatButton:
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .5}
            text: "Gerar mapa"
            on_release:
                app.root.current = 'inicial'

        MDFillRoundFlatButton:
            size_hint_x: .8
            pos_hint: {"center_x": .5, "center_y": .3}
            text: "Próximo fase"
            on_release:
                app.proxima_fase()

<Inicial>
    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: "MDTopAppBar"

        FloatLayout:
            Widget:
                canvas:
                    Color:
                        rgba: 0, .5, .5, 1
                    Rectangle:
                        size: 50,50
                        pos: 50,50
                    Rectangle:
                        size: 50,50
                        pos: 150,150


